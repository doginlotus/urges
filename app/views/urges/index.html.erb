<p id="notice"><%= notice %></p>

<div class="block-container">
  <div class="block-item">
    <h1>Urges</h1>    
  </div>
  <div class="block-item" style="vertical-align: top;">
      <%= link_to "+ spliff", urges_quick_create_path(urge_for_id: 1), class: "btn btn-md btn-success" %>
  </div>
  <div class="block-item">
    <%= render partial: 'urges/partials/since_last' %>
  </div>
</div>




<table class="index-table">
  <thead>
    <tr>
      <th>Time</th>
      <th>Date</th>
      <th>Urge for</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urges.each do |urge| %>
      <tr>
        <td><%= urge.datetime.strftime("%H:%M:%S") %></td>
        <td><%= urge.date %></td>
        <td><%= UrgeFor.where(id: urge.urge_for_id)[0].urge %></td>
        <td><%= urge.notes %></td>
        <td><%= link_to 'Show', urge %></td>
        <td><%= link_to 'Edit', edit_urge_path(urge) %></td>
        <td><%= link_to 'Destroy', urge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Urge', new_urge_path %>

<p id="notice"><%= notice %></p>

<div class="block-container">
  <div class="block-item">
    <h1>Smokes</h1>
  </div>
  <div class="block-item">
    <%= render partial: 'smokes/partials/since_last' %>    
  </div>
  <div class="block-item">
    <div class="inline-block-container">
      <div class="inline-block-item">
        <%= link_to "+ spliff", smokes_quick_create_path(what_was_smoked: "spliff"), class: "btn btn-lg btn-success" %>    
      </div>
      <div class="inline-block-item">
        <%= link_to "+ juul", smokes_quick_create_path(what_was_smoked: "juul"), class: "btn btn-lg btn-success" %>    
      </div>
      <div class="inline-block-item">
        <%= link_to "+ cig", smokes_quick_create_path(what_was_smoked: "cig"), class: "btn btn-lg btn-success" %>    
      </div>
      <div class="inline-block-item">
        <%= link_to "+ other", smokes_quick_create_path(what_was_smoked: "other"), class: "btn btn-lg btn-success" %>      
      </div>
      <div class="inline-block-item">
        <%= link_to "+ bulk", smokes_bulk_create_form_path, class: "btn btn-lg btn-success" %>      
      </div>
    </div>
  </div>
</div>

<table class="index-table">
  <thead>
    <tr>
      <th>Time</th>
      <th>Date</th>
      <th>What</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @smokes.each do |smoke| %>
      <tr>
        <td><%= smoke.datetime.strftime("%H:%M:%S") %></td>
        <td><%= smoke.date %></td>
        <td><%= smoke.what %></td>
        <td><%= smoke.notes %></td>
        <td><%= link_to 'Show', smoke %></td>
        <td><%= link_to 'Edit', edit_smoke_path(smoke) %></td>
        <td><%= link_to 'Destroy', smoke, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Smoke', new_smoke_path %>
